<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="shortcut icon" href="../assets/chef-favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/styles.css">

    {% block head %}
        <title>Foodfy</title>
    {% endblock %}

</head>
<body>

    <div class="wrapper">

        <header>
            <div class="header-image">
                <a href="/">
                    <img src="../assets/logo.png" alt="logo Foodfy">
                </a>
            </div>

            <div class="links">
                <a href="/about">Sobre</a>
                <a href="/recipes">Receitas</a>
                <a href="/chefs">Chefs</a>
            </div>

            <form class="form-search" action="/search" method="GET">
                <input 
                    type="text" 
                    name="search"
                    placeholder="Buscar uma receita"
                    value={{search}}
                >
                <button type="submit">Buscar</button>
            </form>
        </header>
        
        {% block content %}{% endblock %}

    </div>
        
    <footer class="footer">
        <p>Todos direitos reservados, receitas Foodfy.</p>
    </footer>

    <script>
        // ACTIVE MENU

        const currentPage = location.pathname
        const links = document.querySelectorAll('.links a')


        for (const link of links) {
            if(currentPage.includes(link.getAttribute('href'))) {
                link.classList.add('active')
            }
        }

        // REMOVE INFORMATION ON CHEFS PAGE

        const page = location.pathname
        const formSearch = document.querySelector('.form-search')
        const footer = document.querySelector('.footer')

        if(page.includes('chefs')) {
            formSearch.style.display = 'none'
            footer.style.display = 'none'
        }
    </script>
</body>
</html>