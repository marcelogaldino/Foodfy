{% extends 'layout-admin.njk' %}

{% block head %}
    <title>Admin chef - Foodfy</title>
{% endblock head %}

{% block content %}

    <div class="admin-header">
        <h2>Chef: {{ chef.name }}</h2>
        <a href="/admin/chefs/{{ chef.id }}/edit">Editar chef</a>
    </div>

    <div class="chef">
        
        <div class="chef-avatar">
            <img src="{{ chef.avatar_url }}" alt="{{ chef.name }}">
        </div>

        <div class="chef-info">
            <h1>{{ chef.name }}</h1>
            <p>{{recipesByChef.total_recipes}} receitas</p>
        </div>

    </div>

    <h2 class="recipe-title ">Receitas</h2>

   <div class="admin-recipes">
        {% for recipe in recipes %}
            <div class="admin-recipe" id="{{ recipe.id }}">
                <div class="admin-recipe-image">
                    <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
                </div>
                <div class="admin-recipe-content">
                    <p>{{ recipe.title }}</p>
                    <p class="admin-recipe-author">por {{ chef.name }}</p>
                    <a id="chef" href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock content %}
    