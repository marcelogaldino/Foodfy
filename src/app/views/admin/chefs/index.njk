{% extends 'layout-admin.njk' %}

{% block content %}
    <div id="header-chef" class="header">
        <h2 id="manage-chefs">Gerenciar chefs</h2>
        <a href="/admin/chefs/create">Novo chef</a>
    </div>

    <div class="admin-chefs">
        {% for chef in chefs %}
            <div class="admin-chef" id="{{ chef.id }}">
                <div class="admin-chef-image">
                    <img src="{{ chef.avatar_url }}" alt="{{ chef.name }}">
                </div>
                <div class="admin-chef-content">
                    <p class="admin-chef-author">{{ chef.name }}</p>
                    <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}